page{
  background-color: #fff;
}
.cates_container{
  display: flex;
}
.left_menu{
  flex: 2;
}
.menu_item{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  border-bottom: 2rpx solid #ededed;
  border-right: 1rpx solid #ededed;
}
.active{
  color: var(--themeColor2);
  border-left: 5px solid currentColor;
}
.right_content{
  flex: 6;
}
.xiaolei_name{
  padding: 0rpx 15rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.navi{
  display: flex;
  padding: 10rpx;
}
.image{
  flex: 2;
  overflow: hidden;
  width: 100%;
  height: 12vh;
}
.goods_content{
  flex: 3;
  padding-left: 20rpx;
}
.goods_name{
  font-size: 32rpx;
}
.goods_detail{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 24rpx;
  color: gray;
}
.price_wrap{
  padding-top: 36rpx;
  display: flex;
  justify-content: space-between;
}
.goods_price{
  color: red;
  font-weight: 600;
  font-size: 32rpx;
}
.num_wrap{
  display: flex;
  margin-top: 5rpx;
}
.num_edit{
  width: 38rpx;
  height: 38rpx;
  border: 5rpx solid currentColor;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: var(--themeColor2);
  font-weight: 700;
  font-size: 34rpx;
  padding-bottom: 5rpx;
}
.goods_num{
  padding: 0 20rpx;
}