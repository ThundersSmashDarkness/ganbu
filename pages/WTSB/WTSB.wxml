      <input class="Input" type="text" placeholder="请输入村庄全称或村庄id" name="village"/>
    </view>
    <view class="wrap">
      <view class="text">联系方式</view>
      <input class="Input" type="text" placeholder="请输入您的联系方式" name="contact"/>
    </view>
    
    <view class="warp-bottom">
      <view class="text">问题详细情况说明</view>
      <view class="text_tishi">问题原因，解决难点</view>
      <textarea class="text_area" name="special_situation"
      maxlength="-1"></textarea>
    </view>
  </view>
  <view class="submit_area">
  <button class="submit-btn" form-type="submit">上报</button>
  </view>
</form>