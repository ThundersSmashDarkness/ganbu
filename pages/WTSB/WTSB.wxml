<form catchsubmit="formSubmit" class="from_wrap">
  <view class="infomation">
    <view class="wrap">
    <view class="text">干部姓名</view>
    <input class="Input" type="text" placeholder="请输入您的姓名" name="name"/>
    </view>
    <view class="wrap">
